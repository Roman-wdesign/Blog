extends ../layout/main.pug

block title
    | Signin

block body
    h1.page__title.page__title--center Вход
    form.form.form--auth(action='/' method='post')
        .form__group.form__group--md
            input.form__control(type='email' placeholder='Ваш e-mail')
            span.form__line
        .form__group.form__group--md
            input.form__control(type='password' placeholder='Пароль')
            span.form__line
        .form__footer.form__footer--center
            .form__group.form__group--md
                button.btn.btn--blue.btn--rounded.btn--sm(type='submit') Войти
            ul.form__footer-list
                li
                    a(href='signup.html') регистрация
                li
                    a(href='reset.html') восстановить